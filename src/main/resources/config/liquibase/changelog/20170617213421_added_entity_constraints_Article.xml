<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity Article.
    -->
    <changeSet id="20170617213421-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="article_id"
                                 baseTableName="article_tag"
                                 constraintName="fk_article_tag_articles_id"
                                 referencedColumnNames="id"
                                 referencedTableName="article"/>
        <addForeignKeyConstraint baseColumnNames="tags_id"
                                 baseTableName="article_tag"
                                 constraintName="fk_article_tag_tags_id"
                                 referencedColumnNames="id"
                                 referencedTableName="tag"/>

        <addForeignKeyConstraint baseColumnNames="author_id"
                                 baseTableName="article"
                                 constraintName="fk_article_author_id"
                                 referencedColumnNames="id"
                                 referencedTableName="author"/>

        <addForeignKeyConstraint baseColumnNames="article_id"
                                 baseTableName="article_favorited"
                                 constraintName="fk_article_favorited_article_id"
                                 referencedColumnNames="id"
                                 referencedTableName="article"/>
        <addForeignKeyConstraint baseColumnNames="favorited_id"
                                 baseTableName="article_favorited"
                                 constraintName="fk_article_favorited_favoriteds_id"
                                 referencedColumnNames="id"
                                 referencedTableName="author"/>

    </changeSet>
</databaseChangeLog>
