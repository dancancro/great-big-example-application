<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Rebuttal.
    -->
    <changeSet id="20170617213417-1" author="jhipster">
        <createTable tableName="rebuttal">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="long_name" type="varchar(1200)">
                <constraints nullable="true" />
            </column>

            <column name="short_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="jhi_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="expires" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="jhi_link" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="rebuttal" columnName="jhi_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="rebuttal" columnName="expires" columnDataType="datetime"/>
        
    </changeSet>
</databaseChangeLog>
